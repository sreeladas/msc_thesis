        \put(0,8){\makebox(0,0)[tl]{\normalsize\scshape\resizebox{115mm}{!}{\@@title}}}
        \put(0,2.9){\makebox(0,0)[tl]{\normalsize\scshape\resizebox{70mm}{!}{\@@subtitle}}}
        \put(167,12){\makebox(0,0)[tr]{\includegraphics[width=10pc]{\@logosource}}}
      \end{picture}%
      \par%
      \endgroup%
      \vskip2\baselineskip%
      % article title
      \begingroup%
      \parindent0pt%
      \unitlength1mm%
      \begin{picture}(0,0)%
        \put(0,8.9){%
          \makebox(0,0)[tl]{%
            \parbox{115mm}{%
              \parindent0pt%
              \raggedright\bfseries\LARGE%
              \hrulefill\\%
             %\vspace{1cm}
              %\@title%
            }%
          }%
        }%
      \end{picture}%
      \par%
      \endgroup%h
      % fix distance
      \vskip-0.5\baselineskip%
